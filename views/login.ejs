<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <link href="/css/login.css" rel="stylesheet">
    
    <script>
        function myFunction() {
            var x = document.getElementById("myLinks");
            if (x.style.display === "block") {
              x.style.display = "none";
            } else {
              x.style.display = "block";
            }
          }
    </script>
</head>
    <body>
        <main>
        <%- include("./partials/header") %>
            <div id="cajaform">
                <form action="/users/login" method="POST" id="formulario" class="formulario">
                    
                    <div class="acaEmail" id="erroresFront"></div>
                    <label for="email">Username/E-mail*</label>
                    <input type="text" id="email" name="email" >
                    <% if (locals.errors && errors.email) { %>
                    <p class="loginerror"><%= errors.email.msg %>  </p>
                    <% } %>
                    <div class="acaEmail" id="erroresFront"></div>
                    <label for="password">Password*</label>
                    <input type="password" id="password" name="password" >
                    <% if (locals.errors && errors.password) { %>
                        <p class="loginerror"><%= errors.password.msg %>  </p>
                    <% } %>
                    <label for="recordame">Remember me</label>
                    <input type="checkbox" name="recordame">
                    <br>
                    <div id="cajaboton"><button type="submit" name="login" id="enter">Enter</button></div>
                </form>
            </div>  
        </main>
     <%- include("./partials/footer") %>
    </body>
</html>